---
interface Props {
  link: string;
  icon: string;
  name: string;
  ignoreColor?: boolean;
}

const { link, icon, name, ignoreColor } = Astro.props;
---

<a
  data-role={ignoreColor ? "" : "icon"}
  href={link}
  target="_blank"
  class="hover:-translate-y-2 transition-all text-[3.5rem] relative group"
>
  <i class={icon} class="text-4xl transition-colors"> </i>
  <sub
    class="text-[14px] absolute text-center inset-x-0 -translate-y-4 opacity-0 group-hover:opacity-100 transition-opacity delay-75"
    >{name}</sub
  >
</a>
